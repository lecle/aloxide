{
  "name": "@aloxide/example-api-gateway",
  "description": "Example of using jest with a TS monorepo",
  "version": "1.0.0",
  "license": "ISC",
  "private": true,
  "files": [
    "dist"
  ],
  "types": "./dist/*.d.ts",
  "scripts": {
    "prepstart": "rimraf ./contracts */models/bcModelBuilder.ts",
    "start": "echo '==========\n-- INSTRUCTION:\ncd packages/example-api-gateway and\nstart server: yarn start:server\nstart demux: yarn start:demux\n==========\n'",
    "start:server": "nodemon dist/index.js",
    "start:demux": "nodemon dist/readBlockchain.js",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "lint": "tslint --project . --fix",
    "test": "jest -o"
  },
  "nodemonConfig": {
    "delay": "3000",
    "watch": [
      "dist"
    ],
    "ignore": [
      "*/models/bcModelBuilder.js"
    ]
  },
  "dependencies": {
    "@aloxide/api-gateway": "^1.0.0",
    "@aloxide/demux": "^1.0.0",
    "@aloxide/logger": "^1.0.0",
    "@aloxide/model": "^1.0.0",
    "demux": "^4.0.0",
    "demux-eos": "^4.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.0.0",
    "graphql-relay": "^0.6.0",
    "graphql-yoga": "^1.18.3",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.3",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/graphql-relay": "^0.6.0",
    "nodemon": "^2.0.4"
  }
}
