{
  "name": "@aloxide/example-api-gateway",
  "description": "Example of using jest with a TS monorepo",
  "version": "0.1.0",
  "author": "Lecle",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:lecle/aloxide.git"
  },
  "files": [
    "dist"
  ],
  "types": "./dist/*.d.ts",
  "scripts": {
    "prepstart": "rimraf ./contracts */models/bcModelBuilder.ts",
    "start": "echo '==========\n-- INSTRUCTION:\ncd packages/example-api-gateway and\nstart server: yarn start:server\nstart demux: yarn start:demux\n==========\n'",
    "start:server": "ts-node --watch -P ./tsconfig.json scr/index.ts | bunyan -o short",
    "start:demux": "ts-node -P ./tsconfig.json src/readBlockchain.ts | bunyan -o short",
    "start:dummy": "ts-node -P ./tsconfig.json src/dummy.ts | bunyan -o short",
    "build": "yarn clean && yarn compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "lint": "tslint --project . --fix",
    "test": "jest -o"
  },
  "nodemonConfig": {
    "delay": "3000",
    "watch": [
      "dist"
    ]
  },
  "dependencies": {
    "@aloxide/api-gateway": "^0.1.0",
    "@aloxide/demux": "^0.1.0",
    "@aloxide/demux-icon": "^0.1.0",
    "@aloxide/model": "^0.1.0",
    "bunyan": "^1.8.14",
    "demux-eos": "^4.0.1",
    "express": "^4.17.1",
    "fetch": "^1.1.0",
    "graphql": "^14.0.0",
    "graphql-relay": "^0.6.0",
    "graphql-yoga": "^1.18.3",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.3",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.7",
    "@types/faker": "^4.1.12",
    "@types/graphql-relay": "^0.6.0",
    "dotenv-extended": "^2.8.0",
    "eosjs": "^21.0.2",
    "faker": "^4.1.0",
    "nodemon": "^2.0.4"
  }
}
